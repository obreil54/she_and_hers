<div id="product-edit">
  <h1>Edit Product</h1>

  <%= form_with model: @product, local: true, multipart: true do |form| %>
    <!-- Standard fields -->
    <div class="field">
      <%= form.label :name %><br>
      <%= form.text_field :name, required: true %>
    </div>

    <div class="field">
      <%= form.label :price %><br>
      <%= form.number_field :price, step: 1, required: true %>
    </div>

    <div class="field">
      <%= form.label :description %><br>
      <%= form.text_area :description, required: true %>
    </div>

    <div class="field">
      <%= form.label :care_instructions %><br>
      <%= form.text_area :care_instructions, required: true %>
    </div>

    <div class="field">
      <%= form.label :weight, "Weight (g)" %><br>
      <%= form.number_field :weight, step: 0.1, required: true %>
    </div>

    <!-- Display existing photos with optional upload fields for replacements -->
    <div class="field">
      <%= form.label :primary_photo, "Primary Photo" %><br>
      <%= form.file_field :primary_photo %> <!-- No required attribute -->
    </div>

    <div class="field">
      <%= form.label :secondary_photo, "Secondary Photo" %><br>
      <%= form.file_field :secondary_photo %>
    </div>

    <div class="field">
      <%= form.label :tertiary_photo, "Tertiary Photo" %><br>
      <%= form.file_field :tertiary_photo %>
    </div>

    <div class="field">
      <%= form.label :other_photos, "Additional Photos" %><br>
      <%= form.file_field :other_photos, multiple: true %>
    </div>

    <div class="field">
      <%= form.label :one_size, "One Size" %><br>
      <%= form.check_box :one_size %>
    </div>

    <div class="actions">
      <%= form.submit "Update Product" %>
    </div>
  <% end %>

  <%= button_to "Delete Product", product_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this product?" }, class: "delete-button" %>
</div>
