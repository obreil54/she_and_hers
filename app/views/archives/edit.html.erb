<div id="archive-edit-page">
  <h1>Edit Archive</h1>
  <%= form_with model: @archive, local: true do |form| %>
    <div>
      <%= form.label :name, "Name" %>
      <%= form.text_field :name, value: @archive.name %>
    </div>

    <div>
      <%= form.label :description, "Description" %>
      <%= form.text_area :description, value: @archive.description %>
    </div>

    <div>
      <%= form.label :primary_image, "Primary Image" %>
      <%= form.file_field :primary_image %>
      <% if @archive.primary_image.attached? %>
        <p>Current Primary Image:</p>
        <%= image_tag @archive.primary_image, width: 200 %>
      <% end %>
    </div>

    <div>
      <%= form.label :images, "Additional Images" %>
      <%= form.file_field :images, multiple: true %>
      <% if @archive.images.attached? %>
        <p>Current Additional Images:</p>
        <div class="current-images">
          <% @archive.images.each do |image| %>
            <%= image_tag image, width: 100 %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div>
      <%= form.submit "Update Archive" %>
    </div>
  <% end %>
</div>
