<nav>
  <%= link_to root_path do %>
    <%= image_tag('text-logo.png', alt: 'Text Logo') %>
  <% end %>
  <div id="navbar-links">
    <%= link_to 'HOME', root_path %>
    <%= link_to 'SHOP', products_path %>
    <%= link_to 'EXPLORE', explore_path %>
    <%= link_to "CART (<span data-cart-target='count'>#{@cart.cart_items.sum(:quantity)}</span>)".html_safe, cart_path(@cart) %>


    <% if user_signed_in? %>
      <%= link_to 'PROFILE', user_path(current_user) %>
    <% else %>
      <%= link_to 'LOGIN', new_user_session_path %>
    <% end %>
  </div>
</nav>
