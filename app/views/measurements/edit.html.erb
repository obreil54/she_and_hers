<% content_for :body_class, "profile-edit-page" %>
<div id="profile-edit-page">
  <%= simple_form_for @measurement, html: { class: 'form-horizontal' } do |form| %>
    <% if @measurement.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@measurement.errors.count, "error") %> prohibited this measurement from being saved:</h2>
        <ul>
          <% @measurement.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.input :chest, placeholder: "CHEST (CM)", label: false, required: false, input_html: { autocomplete: "chest" } %>
    </div>

    <div class="field">
      <%= form.input :waist, placeholder: "WAIST (CM)", label: false, required: false, input_html: { autocomplete: "waist" } %>
    </div>

    <div class="field">
      <%= form.input :high_hips, placeholder: "HIGH HIPS (CM)", label: false, required: false, input_html: { autocomplete: "high_hips" } %>
    </div>

    <div class="field">
      <%= form.input :low_hips, placeholder: "LOW HIPS (CM)", label: false, required: false, input_html: { autocomplete: "low_hips" } %>
    </div>

    <div class="field">
      <%= form.input :thigh, placeholder: "THIGH (CM)", label: false, required: false, input_html: { autocomplete: "thigh" } %>
    </div>

    <div class="field">
      <%= form.input :torso, placeholder: "TORSO (CM)", label: false, required: false, input_html: { autocomplete: "torso" } %>
    </div>

    <div class="field">
      <%= form.input :arm_length, placeholder: "ARM LENGTH (CM)", label: false, required: false, input_html: { autocomplete: "arm_length" } %>
    </div>

    <div class="field">
      <%= form.input :shoulder_width, placeholder: "SHOULDER WIDTH (CM)", label: false, required: false, input_html: { autocomplete: "shoulder_width" } %>
    </div>

    <div class="field">
      <%= form.input :upper_arm_circumference, placeholder: "UPPER ARM CIRCUMFERENCE (CM)", label: false, required: false, input_html: { autocomplete: "upper_arm_circumference" } %>
    </div>

    <div class="field">
      <%= form.input :inseam, placeholder: "INSEAM (CM)", label: false, required: false, input_html: { autocomplete: "inseam" } %>
    </div>

    <div class="field">
      <%= form.input :height, placeholder: "HEIGHT (CM)", label: false, required: false, input_html: { autocomplete: "height" } %>
    </div>

    <div class="actions">
      <%= form.button :submit, "UPDATE" %>
    </div>
  <% end %>
</div>
